<addons>
  <addon id="plugin.program.Sanctum-Wiz" name="Sanctum Wizard" version="0.07" provider-name="Philosophics">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.requests" optional="true"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Simple Wizard is a lightweight template for installing builds on Kodi. Has some code from Aftermath Wizard by Surfacingx. Skin Switch by OpenELEQ. Base code by BYB. Credits to them and all others who contributed. Please report any bugs to @slamious on Telegram/Twitter.</summary>
    <description lang="en_GB">Kodi Wizard</description>
    <disclaimer lang="en_GB">This Addon contains no content</disclaimer>
    <language>en</language>
    <platform>all</platform>
    <license>GPL-2.0-or-later</license>
    <forum/>
    <website/>
    <email/>
    <source/>
    <news>Initial Release </news>
    <assets>
      <icon>resources/icon.png</icon>
      <fanart>resources/fanart.jpg</fanart>
      <banner/>
      <clearlogo/>
      <screenshot/>
    </assets>
  </extension>
</addon>
  <addon id="repository.Sanctum" name="Sanctum Repo" version="0.07" provider-name="Philosophics">
    <extension point="xbmc.addon.repository" name="Sanctum Repository">
      <dir>
        <info compressed="false">https://philosophics.github.io/Sanctum/addons.xml</info>
        <checksum>https://philosophics.github.io/Sanctum/addonsmd5.txt</checksum>
        <datadir zip="true">https://philosophics.github.io/Sanctum/</datadir>
      </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
      <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
      </assets>
      <summary lang="en">Sanctum Repository</summary>
      <description lang="en">A project for The Salted Lounge</description>
      <genre></genre>
    </extension>
  </addon>
</addons>
